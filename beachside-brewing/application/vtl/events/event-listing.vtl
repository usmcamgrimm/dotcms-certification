<style>
  .card {
    width: 20rem;
    height: 500px;
  }
</style>

<div class="container">
  <div class="row flex-wrap">
    #foreach($con in $dotcontent.pull("+contentType:Events +(conhost:d218cd93f037bed5c469ba8bb792be5e conhost:SYSTEM_HOST)",0,"Events.eventDate"))
      <div class="col-lg-4 col-sm-12">
        <div class="card">
          <img src="/dA/${dotContentMap.identifier}/image/$!{dotContentMap.image.name}" class="card-img-top event-img" width="320" height="280" alt="image showing an event at the brewery">
          <div class="card-body">
            <p class="card-title fw-bold text-center">
              <a href="/events/$!{con.urlTitle}">$!{con.eventName}</a>
            </p>
            <p class="card-text text-center"><span class="fw-bold">$date.format('MMMM dd, yyyy', $con.eventDate)</span> â€¢ <span class="card-text">$date.format('h:mm a', $con.eventTime)</span></p>
            <hr>
            <p class="card-text">$!{con.description}</p>
          </div>
        </div>
      </div>
    #end
  </div>
</div>